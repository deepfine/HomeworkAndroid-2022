<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/rv_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/rv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/rv_img"
        android:text="I love my hairs"
        android:textColor="#3A3A3A"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rv_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/rv_name"
        android:text="Click here to see all my comments"
        android:textColor="#999999"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/follower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_id"
        android:layout_marginTop="20dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/rv_img"
        android:text="Click here to see all my comments"
        android:textColor="#999999"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/following"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/follower"
        android:layout_marginTop="5dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/rv_img"
        android:text="Click here to see all my comments"
        android:textColor="#999999"
        android:textSize="10sp" />

    <CheckBox
        android:id="@+id/userList_check"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:button="@drawable/favorite_selector"
        android:checked="false" />


</RelativeLayout>